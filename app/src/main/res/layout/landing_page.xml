    <!-- Food Item Description -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Hey ya'll! There's some tasty dish leftover from the monthly Computer Geeks club meeting. Running out fast!! "
        android:textColor="@color/black"
        android:textStyle="italic"/>

    <!-- Pickup Location -->
    <TextView
        android:id="@+id/pickupLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Location: "
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_toEndOf="@+id/pickupLocation"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Discovery Park, K120"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TextAvailableUntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickupLocation"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Available until:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textViewAvailableUntil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickupLocation"
        android:layout_toEndOf="@id/TextAvailableUntil"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text=" November 11, 2023: 8 pm "
        android:textColor="@color/black"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/point_of_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAvailableUntil"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Point of contact: "
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/point_of_contact_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAvailableUntil"
        android:layout_toEndOf="@id/point_of_contact"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Sushant Thapa(sushantthapa@my.unt.edu)"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/claim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point_of_contact_value"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Claim"
        android:textColor="@android:color/white" />



</RelativeLayout>
